{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "..",
    "paths": {
      "*": ["*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest", "node"]
  },
  "include": [
    "**/*.ts",
    "../common/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}